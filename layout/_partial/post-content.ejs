<div id="post-content" class="mdl-color-text--grey-700 mdl-card__supporting-text fade out">
    <% if(theme.scheme === 'Paradox') { %>

        <% const dayofdiff = (new Date() - page.updated)/(1000*3600*24) | 0 %>
        <% if (!page.hide_outdated && dayofdiff > 90) {%>
            <blockquote id="outofdate"
                        style="margin: 1em 0 0;padding: 0.5em 1em;border-left: 3px solid #ffea00;background-color: #F5F5F5;list-style: none;">
                <p>本文最近一次更新于 <%= dayofdiff %>
                    天前，其中所包含的信息很可能已经有所发展或是发生改变。</p>
            </blockquote>
        <% } %>

        <script>document.querySelector("#outofdate>p").innerHTML = `本文最近一次更新于 ${(new Date() - new Date("<%=page.updated %>")) / (1000 * 3600 * 24) | 0} 天前，其中所包含的信息很可能已经有所发展或是发生改变。`</script>

        <%- page.content %>

        <% if(page.layout === 'links') { %>
            <!-- Single Timeline Page -->
            <%- partial('_widget/page-links') %>
        <% } %>

        <% if (page.hide_license !== true && theme.license || page.license) { %>
                <blockquote style="margin: 2em 0 0;padding: 0.5em 1em;border-left: 3px solid #F44336;background-color: #F5F5F5;list-style: none;">
                    <p>
                        <b><%- __('post.title')%></b> <%-page.title %>
                        <br>
                        <b><%- __('post.updated') %></b><%= date(page.updated, 'YYYY 年 MM 月 DD 日 - HH:MM') %>
                        <br>
                        <strong><%- __('post.permalink') %></strong><a href="<%= page.permalink %>"><%= page.permalink %></a>
                        <br>
                        <strong>
                        <% if (page.license) { %>
                            <%- page.license %>
                        <% } else { %> 
                            <%- theme.license %>
                        <% } %>
                        </strong>
                    </p>
                </blockquote>
        <% } %>
    <% } %>

    <% if(theme.scheme === 'Isolation') { %>
        <div class="post-content_wrapper">
            <p class="post-title">
                <%- page.title %>
            </p>
            <%- page.content %>
            <% if (page.license || theme.license) { %>
                <blockquote>
                    <p>
                        <% if (page.license) { %>
                            <%- page.license %>
                        <% } else { %> 
                            <%- theme.license %>
                        <% } %>
                        <br>
                        <%- __('post.permalink') %> <%= page.permalink %>
                    </p>
                </blockquote>
            <% } %>
        </div>
    <% } %>
</div>
